name: Build Test-Desktop Docker

on:
  workflow_dispatch:
  workflow_call:
  pull_request:
    paths:
      - "test-desktop/**"
  push:
    branches:
      - main
    paths:
      - "test-desktop/**"

concurrency:
  group: ${{"{{"}} github.workflow {{"}}"}}-${{"{{"}} github.ref {{"}}"}}
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-24.04
    if: "!contains(github.event.head_commit.message, '[ci skip]')"
    strategy:
      fail-fast: false
      matrix:
        os:
          {{- range . -}}
            {{- $name := .Name -}}
            {{- range .Codes }}
          - distro: {{ $name }}
            codename: {{ . -}}
            {{- end }}
{{ end }}
    steps:
      - name: Set up QEMU
        uses: docker/setup-qemu-action@v3

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Build ${{"{{"}} matrix.os.distro {{"}}"}} ${{"{{"}} matrix.os.codename {{"}}"}}
        uses: docker/build-push-action@v6
        with:
          context: "{{"{{"}} defaultContext {{"}}"}}:test-desktop/${{"{{"}} matrix.os.distro {{"}}"}}/${{"{{"}} matrix.os.codename {{"}}"}}"
