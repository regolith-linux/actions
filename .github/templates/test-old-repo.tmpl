name: Test Old Repository

on:
  workflow_dispatch:
  workflow_call:
  push:
    branches:
      - main

concurrency:
  group: ${{"{{"}} github.workflow {{"}}"}}-${{"{{"}} github.ref {{"}}"}}
  cancel-in-progress: true

jobs:
{{- range . -}}
  {{- $name := .Name -}}
  {{- range .Codes }}
  {{ $name }}-{{ . }}:
    runs-on: ubuntu-latest
    if: "!contains(github.event.head_commit.message, '[ci skip]')"
    continue-on-error: true
    strategy:
      fail-fast: true
      matrix:
        stage: [experimental, unstable, testing, release-current] # release-3_0, release-3_1, release-3_2
    env:
      apt-key-url: http://regolith-desktop.org/regolith.key
      apt-repo-line: "deb [arch=amd64] https://regolith-desktop.org/${{"{{"}} matrix.stage {{"}}"}}-{{ $name }}-{{ . }}-amd64 {{ . }} main"
      target-package: regolith-desktop
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install ${{"{{"}} matrix.target-package {{"}}"}} ${{"{{"}} matrix.stage {{"}}"}} on {{ $name }} {{ . }}
        uses: ./{{ $name }}/{{ . }}
        with:
          apt-key-url: ${{"{{"}} env.apt-key-url {{"}}"}}
          apt-repo-line: ${{"{{"}} env.apt-repo-line {{"}}"}}
          target-package: ${{"{{"}} env.target-package {{"}}"}}
{{ end -}}
{{ end -}}
